{
  "name": "geb1024-com",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "build:server": "tsx ./server/build-server.ts",
    "dev": "MOCKS=true remix dev -c \"tsx ./server/index.ts\"",
    "start": "NODE_ENV=production node ./server-build/index.js",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier --write .",
    "typecheck": "tsc",
    "test:unit": "vitest",
    "test:unit:ci": "vitest run",
    "test:e2e": "start-server-and-test dev http://localhost:3000 \"npx playwright test\"",
    "test:e2e:ui": "start-server-and-test dev http://localhost:3000 \"npx playwright test --ui\"",
    "validate": "run-s format lint typecheck test:unit:ci test:e2e"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/playwright-report",
    "/server-build"
  ],
  "dependencies": {
    "@remix-run/css-bundle": "^2.3.1",
    "@remix-run/node": "^2.3.1",
    "@remix-run/react": "^2.3.1",
    "@remix-run/serve": "^2.3.1",
    "@types/express": "^4.17.21",
    "close-with-grace": "^1.2.0",
    "express": "^4.18.2",
    "gsap": "^3.12.4",
    "isbot": "^3.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@remix-run/dev": "^2.3.1",
    "@remix-run/eslint-config": "^2.3.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "msw": "^2.0.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "remix-development-tools": "^3.6.2",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2",
    "vite-tsconfig-paths": "^4.2.2",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": "20"
  }
}
