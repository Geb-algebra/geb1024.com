{
  "name": "geb1024-com",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "start": "NODE_ENV=production wrangler pages dev ./build/client",
    "deploy": "wrangler pages deploy ./build/client",
    "dev": "vite",
    "typegen": "wrangler types && react-router typegen",
    "check": "biome check .",
    "check:apply": "biome check --apply .",
    "check:apply-unsafe": "biome check --apply-unsafe .",
    "typecheck": "npm run typegen && tsc",
    "test:unit": "vitest",
    "test:unit:ci": "vitest run",
    "test:e2e": "start-server-and-test dev http://localhost:3000 \"npx playwright test\"",
    "test:e2e:ui": "start-server-and-test dev http://localhost:3000 \"npx playwright test --ui\"",
    "validate": "run-s check typecheck"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/playwright-report",
    "/server-build"
  ],
  "dependencies": {
    "@mdx-js/rollup": "^3.0.1",
    "@react-router/cloudflare": "^7.1.1",
    "@react-router/node": "^7.1.1",
    "@react-router/remix-routes-option-adapter": "^7.1.1",
    "@react-router/serve": "^7.1.1",
    "esbuild": "^0.21.3",
    "gsap": "^3.12.5",
    "isbot": "^5.1.6",
    "mdx-bundler": "^10.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.1.1",
    "rehype-pretty-code": "^0.13.2",
    "remix-hono": "^0.0.16",
    "shikiji": "^0.10.2",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@hono/vite-dev-server": "^0.12.1",
    "@playwright/test": "^1.44.0",
    "@react-router/dev": "^7.1.1",
    "@react-router/fs-routes": "^7.1.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "msw": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "remix-development-tools": "^4.1.6",
    "remix-flat-routes": "^0.6.5",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0",
    "wrangler": "^3.57.0"
  },
  "engines": {
    "node": "20"
  }
}
