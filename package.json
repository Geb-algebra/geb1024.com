{
  "name": "geb1024-com",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix vite:build",
    "build:server": "tsx ./server/build-server.ts",
    "dev": "MOCKS=true tsx ./server/index.ts",
    "start": "NODE_ENV=production node ./server-build/index.js",
    "check": "biome check .",
    "check:apply": "biome check --apply .",
    "check:apply-unsafe": "biome check --apply-unsafe .",
    "typecheck": "tsc",
    "test:unit": "vitest",
    "test:unit:ci": "vitest run",
    "test:e2e": "start-server-and-test dev http://localhost:3000 \"npx playwright test\"",
    "test:e2e:ui": "start-server-and-test dev http://localhost:3000 \"npx playwright test --ui\"",
    "validate": "run-s check typecheck"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/playwright-report",
    "/server-build"
  ],
  "dependencies": {
    "@remix-run/css-bundle": "^2.9.2",
    "@remix-run/node": "^2.9.2",
    "@remix-run/react": "^2.9.2",
    "@remix-run/serve": "^2.9.2",
    "@types/express": "^4.17.21",
    "close-with-grace": "^1.3.0",
    "esbuild": "^0.21.3",
    "express": "^4.19.2",
    "gsap": "^3.12.5",
    "isbot": "^5.1.6",
    "mdx-bundler": "^10.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rehype-pretty-code": "^0.13.2",
    "shikiji": "^0.10.2",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@playwright/test": "^1.44.0",
    "@remix-run/dev": "^2.9.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "msw": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "remix-development-tools": "^4.1.6",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": "20"
  }
}
